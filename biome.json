{
  "$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
  "vcs": {
    "enabled": false,
    "clientKind": "git",
    "useIgnoreFile": false
  },
  "organizeImports": {
    "enabled": true
  },
  "files": {
    "include": [
      "./src/**/*",
      "./tests/**/*",
      "./scripts/**/*",
      "./snapshots/**/*",
      "./bench/**/*"
    ]
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "single"
    }
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "bracketSpacing": true
  },
  "linter": {
    "enabled": true,
    "rules": {
      "style": {
        "noArguments": "error",
        "noNamespace": "error",
        "noImplicitBoolean": "warn",
        "noUselessElse": "error",
        "useCollapsedElseIf": "error",
        "useConst": "info",
        "useNumericLiterals": "error",
        "useNodejsImportProtocol": "error",
        "useImportType": "error",
        "useExponentiationOperator": "info"
      },
      "complexity": {
        "noForEach": "info",
        "noUselessCatch": "info",
        "useArrowFunction": "warn"
      },
      "nursery": {
        "noCommonJs": "warn"
      },
      "correctness": {
        "useYield": "warn",
        "noUnusedImports": "warn",
        "useImportExtensions": "error"
      },
      "recommended": false
    }
  }
}
